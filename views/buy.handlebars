<div class="container text-white" style="margin-top: 17rem; margin-bottom: 20rem;">
    <h1>Purchase {{symbol}} stock</h1>
    <form action="/purchase/{{symbol}}&{{price}}" method="POST">
        <div class="form-group">
            <label for="symbol">Symbol</label>
            <input type="text" id="symbol" name="symbol" class="form-control" value="{{symbol}}" disabled>
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="float" id="price" name="price" class="form-control" value="{{price}}" disabled>
        </div>
        <div class="form-group">
            <label for="quantity">Quantity</label>
            <input type="number" id="quantity" name="quantity" class="form-control" min="1" required>
        </div>
        <button type="submit" class="btn btn-success">Confirm</button>
        <a href="/browse" class="btn btn-danger">Cancel</a>
    </form>
</div>